<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="fontPath">@string/gothamBold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="cornerRadius">@dimen/login_button_corner_radius</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultBorderButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontPath">@string/gothamBold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">@dimen/login_button_corner_radius</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>