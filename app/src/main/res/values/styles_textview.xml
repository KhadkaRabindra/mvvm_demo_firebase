<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginFieldTitleStyle" parent="WidthWrapHeightWrap">
        <item name="android:textColor">#112338</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PaymentDetailLabel" parent="WidthWrapHeightWrap">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">left</item>
        <item name="fontPath">fonts/Gotham Rounded Book.otf</item>
    </style>

    <style name="PaymentDetailValue" parent="WidthWrapHeightWrap">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">right</item>
        <item name="fontPath">fonts/Gotham Rounded Bold.otf</item>
    </style>

    <style name="PaymentDetailAmount" parent="WidthWrapHeightWrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="fontPath">fonts/Gotham Rounded Bold.otf</item>
    </style>

    <style name="InfoTitleTextViewStyle" parent="WidthWrapHeightWrap">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="PrefundLabelTextViewStyle" parent="WidthWrapHeightWrap">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="fontPath">@string/gotham</item>

    </style>
</resources>