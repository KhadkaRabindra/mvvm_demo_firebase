<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:ignore="HardcodedText">

    <LinearLayout
            android:id="@+id/row1"
            style="@style/Keyboard.Row">

        <TextView
                android:id="@+id/key1"
                style="@style/Keyboard.Key"
                android:text="1"/>

        <TextView
                android:id="@+id/key2"
                style="@style/Keyboard.Key"
                android:text="2"/>

        <TextView
                android:id="@+id/key3"
                style="@style/Keyboard.Key"
                android:text="3"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/row2"
            style="@style/Keyboard.Row">

        <TextView
                android:id="@+id/key4"
                style="@style/Keyboard.Key"
                android:text="4"/>

        <TextView
                android:id="@+id/key5"
                style="@style/Keyboard.Key"
                android:text="5"/>

        <TextView
                android:id="@+id/key6"
                style="@style/Keyboard.Key"
                android:text="6"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/row3"
            style="@style/Keyboard.Row">

        <TextView
                android:id="@+id/key7"
                style="@style/Keyboard.Key"
                android:text="7"/>

        <TextView
                android:id="@+id/key8"
                style="@style/Keyboard.Key"
                android:text="8"/>

        <TextView
                android:id="@+id/key9"
                style="@style/Keyboard.Key"
                android:text="9"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/row4"
            style="@style/Keyboard.Row">

        <TextView
                android:id="@+id/keySpecial"
                style="@style/Keyboard.Key"/>

        <TextView
                android:id="@+id/key0"
                style="@style/Keyboard.Key"
                android:text="0"/>

        <com.eightsquarei.eremitpay.utils.view.numerickeyboard.IconifiedTextView
                android:id="@+id/keyRemove"
                style="@style/Keyboard.Key"
                android:text="&#xe14a;"/>
    </LinearLayout>
</LinearLayout>